@model R12VIS.Models.Deferral

@{
    ViewBag.Title = "Delete";
}

<script>
    var navItem = document.getElementById('nav-item-file-maintenance');
    navItem.classList.remove('collapsed');
    var navLink = document.getElementById('file-maintenance-nav');
    navLink.classList.remove('collapse');
    var navLinkChild = document.getElementById('nav-item-link-file-maintenance-deferral');
    navLinkChild.classList.remove('collapsed');
</script>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Deferral</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Deferral</li>
                <li class="breadcrumb-item active">Delete</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Delete</h5>
                        <div>
                            <h5>Are you sure you want to delete this Deferral?</h5>
                            <div>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        Deferral Name
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Reason)
                                    </dd>

                                </dl>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">
                                        <div class="col text-end pt-3">
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Back to List</a>

                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
