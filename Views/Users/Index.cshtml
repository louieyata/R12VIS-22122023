@model IEnumerable<R12VIS.Models.User>

@{
    ViewBag.Title = "Index";
}



<main id="main" class="main">

    <div class="pagetitle">
        <h1>Index</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Users</a></li>
                <li class="breadcrumb-item">Index</li>
                @*<li class="breadcrumb-item active">Blank</li>*@
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Users List</h5>
                <p>
                    
                    <a class="btn btn-primary" href="@Url.Action("Create", "Users")"><i class="bi bi-person-add"></i> New </a>
                </p>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Role.Title)
                            </th>
                            <th>
                                Name
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.isActive)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Role.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>

                                <td>
                                    @*@Html.DisplayFor(modelItem => item.isActive)*@
                                    @if (item.isActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <a class="link-dark" href="@Url.Action("Edit","Users", new { id=item.ID})"><i class="bi bi-pencil-square"></i></a> |
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.ID })*@
                                    <a class="link-dark" href="@Url.Action("Details","Users", new { id=item.ID})"><i class="bi bi-filter-square"></i></a>                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </section>

</main><!-- End #main -->
