@model IEnumerable<R12VIS.Models.CityMunicipality>

@{
    ViewBag.Title = "Index";
}

<script>
    var navItem = document.getElementById('nav-item-file-maintenance');
    navItem.classList.remove('collapsed');
    var navLink = document.getElementById('file-maintenance-nav');
    navLink.classList.remove('collapse');
    var navLinkChild = document.getElementById('nav-item-link-file-maintenance-citumun');
    navLinkChild.classList.remove('collapsed');
</script>

<main id="main" class="main">

    <div class="pagetitle">
        <h1>City/Municipality</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">City/Municipality</a></li>
                <li class="breadcrumb-item">Index</li>
                @*<li class="breadcrumb-item active">Blank</li>*@
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">City / Munucipality List</h5>
                <p>
                    <a class="btn btn-primary" href="@Url.Action("Create", "CityMunicipalities")"><i class="bi bi-person-add"></i> New </a>
                </p>
                <table class="table table-bordered" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Province.province_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CityMunicipalityName)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.ProvinceCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CityMunicipalityCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ZipCode)
                                </th>*@
                            <th>
                                Excel Code
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Province.province_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CityMunicipalityName)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.ProvinceCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CityMunicipalityCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ZipCode)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.CityMunicipalityCodeExcel)
                                </td>
                                <td>
                                    <a class="link-primary" href="@Url.Action("Edit", "CityMunicipalities", new { id = item.province_id })"><i class="bi bi-pencil-square"></i></a>
                                    <a class="link-secondary" href="@Url.Action("Details", "CityMunicipalities", new { id = item.province_id })"><i class="bi bi-filter-square"></i></a>
                                    <a class="link-danger" href="@Url.Action("Delete", "CityMunicipalities", new { id = item.province_id })"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</main><!-- End #main -->
@section scripts
{
    <script src="~/Content/DataTable/cdn.datatables.net_1.13.4_js_jquery.dataTables.min.js"></script>
    @*<script src="~/Content/DataTable/cdn.datatables.net_1.13.4_js_dataTables.bootstrap5.min.js"></script>*@
    <script src="~/Content/DataTable2/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
            });
        });
    </script>
}
